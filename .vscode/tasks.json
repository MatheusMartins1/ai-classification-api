{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "FastAPI: Start Server",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["main.py"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "FastAPI: Run Tests",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["test_client.py"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Setup: Install Dependencies",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pip", "install", "-r", "requirements.txt"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
